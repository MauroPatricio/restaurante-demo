# Configuração de Ambiente para Testes

# MongoDB de Teste (local ou Atlas)
MONGO_URI=mongodb://localhost:27017/restaurant-test

# JWT Secret para testes
JWT_SECRET=test-jwt-secret-key-for-e2e-tests-12345

# Porta do servidor de teste
PORT=5001

# Ambiente
NODE_ENV=test

# Email (opcional, para testes de notificação)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=test@example.com
EMAIL_PASSWORD=test_password

# Firebase (opcional, para testes de push notifications)
# Deixe em branco se não for testar notificações push
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
